@model IEnumerable<Asp.nerMVCCRUD.Models.Employee>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Employees</h4>

<table class="table table-hover text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emp_Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Postion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfficeLocation)
            </th>
            <th>
                <a asp-action="AddOrEdit" class="btn btn-outline-success"><i class="fa fa-plus-square"></i> Employee</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Emp_Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Postion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OfficeLocation)
                </td>
                <td>
                    <a asp-action="AddOrEdit" asp-route-id="@item.Id"><i class="fa fa-marker fa-lg"></i></a> |
                    <a id="btn-delete" asp-action="Delete" asp-route-id="@item.Id" 
                       onclick="confirm('Are You Sure You Need To Delete This Employee?!')">
                    <i class="fa fa-trash fa-lg text-danger"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
